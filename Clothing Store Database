--Create a clothing store database

CREATE TABLE Elano_Store (id INTEGER PRIMARY KEY, name TEXT, price INTEGER, quantity INTEGER, category TEXT);

INSERT INTO Elano_Store VALUES (1, "biker shorts", 5, 10, "Summer");
