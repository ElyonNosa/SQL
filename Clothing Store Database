INSERT INTO Elano_Store Values (6, "white vests", 10, 12, "Summer");
INSERT INTO Elano_Store Values (7, "knitted sweater", 15, 20, "Winter");
INSERT INTO Elano_Store Values (8, "hats", 5, 4, "Fall");
